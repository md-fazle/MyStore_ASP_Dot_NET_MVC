@model Category
@section title {
    @if (Model != null)
    {
        <h1>Add Category: @Model.Name</h1>
    }
}
<div class="container">
    <form asp-controller="Categories" asp-action="Add" method="post" class="form-horizontal">
        <div class="form-group row mb-3">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
</div>
